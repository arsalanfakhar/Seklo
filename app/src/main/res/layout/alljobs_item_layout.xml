<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/allJobImage"
        android:layout_width="100dp"
        app:riv_corner_radius="10dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/allJobTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="HR Executive"
        app:layout_constraintStart_toEndOf="@+id/allJobImage"
        app:layout_constraintTop_toTopOf="@+id/allJobImage" />

    <TextView
        android:id="@+id/allJobCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Habib Oils"
        app:layout_constraintStart_toStartOf="@+id/allJobTitle"
        app:layout_constraintTop_toBottomOf="@+id/allJobTitle" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Posted on :"
        app:layout_constraintStart_toStartOf="@+id/allJobCompany"
        app:layout_constraintTop_toBottomOf="@+id/allJobCompany" />

    <TextView
        android:id="@+id/allJobPostingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="2020-09-04"
        app:layout_constraintBottom_toBottomOf="@+id/textView14"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toTopOf="@+id/textView14" />

</androidx.constraintlayout.widget.ConstraintLayout>